// two num Sum Problem

import "sort"

func twoSum(nums []int, target int) []int {
    sort.Ints(nums)
    start, end := 0, len(nums)-1
    for start < end {
        currentSum := nums[start] + nums[end]
        if currentSum == target {
            return []int{start, end}
        } else if currentSum < target {
            start += 1
        } else {
            end -= 1
        }
    }
    return []int{}
}
